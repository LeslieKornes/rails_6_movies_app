<% @movies.each do |m| %>
  <section class="movie">
    <div class="image">
          <%= image_tag m.image_file_name %>
    </div>
    <div class="summary">
      <h2>
        <%# option below but too magic for me %>
        <%#= link_to m.title, m %>
        
        <%= link_to m.title, movie_path(m) %>
      </h2>
      <h3>
        <%= total_gross(m) %>
      </h3>
      <span class="stars">
        <%= render "shared/stars", percent: m.average_stars_as_percent %>
      </span>
      <p>
        <%= truncate(m.description, length: 150, separator: ' ') %>
      </p>
    </div>
  </section>
<% end %>


<section class="admin">
  <% if current_user_admin? %>
    <%= link_to "Add New Movie", new_movie_path, class: "button" %>
  <% end %>
</section>
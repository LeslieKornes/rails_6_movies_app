  <header>
    <nav>
      <%= link_to image_tag("logo"), root_path %>
      <ul class="left">
        <li>
          <%= link_to "All Movies", movies_path %>
        </li>
      </ul>
      <ul class="right">
        <% if current_user %>
          <li>
            <%= link_to current_user.name, current_user %>
          </li>
          <li>
            <%= link_to "Account Settings", edit_user_path(current_user) %>
          </li>
        <% else %>
          <li>
            <%= link_to "Sign in", sign_in_path, class: "button" %>
          </li>
          <li>
            <%= link_to "Sign up", sign_up_path, class: "button" %>
          </li>
        <% end %>
      </ul>
    </nav>
  </header>
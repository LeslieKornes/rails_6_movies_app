<section class="user">
  <%= profile_img(@user) %>
  <h1><%= @user.name %></h1>
  <%= @user.username %>
  <h2><%= mail_to(@user.email) %></h2>
  <div class="actions">
    <% if current_user_admin? %> %>
      <%= link_to "Edit", edit_user_path(@user), class: "button edit" %>
      <%= link_to "Delete",
        @user,
        method: :delete,
        data: { confirm: "Permanently delete your account!?" },
        class: "button delete" 
      %>
    <% end %>
  </div>
</section>
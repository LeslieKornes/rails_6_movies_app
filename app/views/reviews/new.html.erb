<h1>Review for <%= link_to @movie.title, @movie %></h1>

<%= form_with(model: [@movie, @review], local: true) do |f| %>
  <%= render "shared/errors", object: @review %>
  
  <%= f.label :name %>
  <%= f.text_field :name, autofocus: true %>

  <%= f.label :stars %>
  <% Review::STARS.each do |s| %>
    <span class="star">
      <%= f.radio_button :stars, s %>
      <%= label_tag s %>
    </span>
  <% end %>

  <%= f.label :comment %>
  <%= f.text_area :comment, placeholder: "What do you think?" %>

  <%= f.submit "Post Review" %>
<% end %>